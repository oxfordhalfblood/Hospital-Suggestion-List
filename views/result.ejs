</head>

<body>

<div id="head" class="container">
    <nav class="navbar navbar-dark bg-dark">
        <div class="bg-dark p-4">
            <h5 class="text-white h4"> <a href="/"> Find Treatment Quickest </a></h5>
                <span class="text-muted">Get the hospital with least waiting time.</span>
        </div>
    </nav>
  
  <!-- <form action="/" method="post"> -->
  <form name="myForm" action="/displayhospital" method="POST">
    

    <div class="flex-grid-thirds">

            <div class="col">
                    Hospital List
                   <hr/>
                       <div id = "hospitaldiv" class = "list-group">
                           <% hospitals.each(function(k) { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                           <%= k.name %>
                           <span class="badge badge-primary badge-pill"> 
                           <%= k.time %>  
                           </span>
                           </li>                  
                           <% }); %>           
                       </div>
                   </div>        

      </div>

 

        <!-- <input type="submit" value="Click here to submit the form"/> -->

  </form> 
  
 

        <!-- <button type="submit" class="btn btn-primary mb-2">Go</button> -->
 
  </div> 


        
<footer class="site-footer">
  <div class="row-footer">
      
        <div class="social-links">
                <a class="btn btn-social-icon btn-google-plus" href="http://google.com/+"><i class="fa fa-google-plus"></i></a>
